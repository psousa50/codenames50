{
  "name": "codenames-server",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run clean && npm run lint",
    "postbuild": "npm test",
    "build": "npm run tsc",
    "tsn": "ts-node",
    "tsc": "tsc --project tsconfig.json",
    "clean": "rm -rf dist",
    "lint": "tslint --project tsconfig.json",
    "dev": "nodemon --exec 'ts-node --files' ./src/index.ts",
    "start": "NODE_ENV=production ts-node ./src/index.ts",
    "start:dev": "ts-node ./src/index.ts",
    "test": "jest --testPathPattern=test/.+\\.spec\\.ts",
    "test:watch": "npm test -- --watch",
    "prettier": "prettier --no-semi --tab-width 2 --print-width 120 --trailing-comma all --parser typescript --list-different \"{src,test}/**/*.ts\"",
    "prettier-fix": "prettier --no-semi --tab-width 2 --print-width 120 --trailing-comma all --parser typescript --write \"{src,test}/**/*.ts\""
  },
  "author": "psousa50",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "convict": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fp-ts": "^2.5.3",
    "moment": "^2.25.3",
    "mongodb": "^3.5.7",
    "ramda": "^0.27.0",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "uuid": "^8.0.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/convict": "^5.2.0",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/jest": "^25.2.3",
    "@types/mongodb": "^3.5.16",
    "@types/ramda": "^0.27.4",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.33",
    "@types/supertest": "^2.0.9",
    "@types/uuid": "^7.0.3",
    "jest": "^26.0.1",
    "mongodb-memory-server": "^6.5.2",
    "nodemon": "^2.0.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.0.0",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.3"
  }
}

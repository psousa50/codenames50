{
  "name": "codenames50",
  "version": "1.0.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/**"
    ],
    "nohoist": [
      "**/web",
      "**/web/**"
    ]
  },
  "scripts": {
    "heroku-postbuild": "./scripts/build.sh",
    "start": "yarn && yarn run build && echo ... to-do",
    "prebuild": "yarn run clean",
    "build": "lerna run build",
    "clean": "yarn run clean:cache && yarn run clean:packages",
    "clean:cache": "rimraf .build-cache",
    "clean:packages": "lerna run clean",
    "lint": "eslint packages --ext ts,tsx",
    "test": "lerna run test",
    "test:watch": "lerna run --parallel test:watch",
    "coverage": "lerna run coverage",
    "pretty:check": "prettier --list-different \"**/*.{css,html,js,json,md,scss,ts}\"",
    "pretty:fix": "prettier --write \"**/*.{css,js,html,json,md,scss,ts}\""
  },
  "license": "MIT",
  "devDependencies": {
    "@types/bson": "^4.2.4",
    "@types/jest": "^26.0.0",
    "@types/node": "16",
    "@types/ramda": "0.28.0",
    "@types/supertest": "^2.0.9",
    "eslint-plugin-jest": "^23.17.1",
    "jest": "24.9.0",
    "lerna": "^3.22.1",
    "mongodb-memory-server": "^6.6.1",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^24.3.0",
    "ts-node": "^8.3.0",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "D": "^1.0.0",
    "babel-eslint": "10.x",
    "bson": "^6.10.3",
    "eslint": "^7.3.1",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "2.x",
    "eslint-plugin-import": "2.x",
    "eslint-plugin-jsx-a11y": "6.x",
    "eslint-plugin-react": "7.x",
    "eslint-plugin-react-hooks": "1.5.0"
  }
}
